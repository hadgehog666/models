@model List<HeatExchangeApp.Models.SavedScenario>
@{
    ViewData["Title"] = "Сохранённые сценарии";
}

<div class="container mt-4">
    <h2>Мои сценарии</h2>
    <a asp-action="Index" class="btn btn-secondary mb-3">← Новый расчёт</a>

    @if (!Model.Any())
    {
        <div class="alert alert-warning">Нет сохранённых сценариев.</div>
    }
    else
    {
        <div class="list-group">
            @foreach (var s in Model)
            {
                <div class="list-group-item d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="mb-1">@s.Name</h5>
                        <small class="text-muted">
                            @s.CreatedAt.ToString("dd.MM.yyyy HH:mm")
                        </small>
                    </div>
                    <div>
                        <a asp-action="Load" asp-route-id="@s.Id" class="btn btn-sm btn-outline-primary">Открыть</a>
                    </div>
                </div>
            }
        </div>
    }
</div>
